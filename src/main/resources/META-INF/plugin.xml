<idea-plugin>
  <!-- Namespace of this plugin. Used in extensions and extension points. -->
  <id>com.developerlife.example.idea-plugin-example</id>
  <name>developerlife example</name>
  <vendor email="idris@developerlife.com" url="http://developerlife.com">
    developerlife.com
  </vendor>

  <description><![CDATA[
    This sample plugin does the following things:
    <ol>
      <li>Creates an application component named Configurator</li>
      <li>Provides an extension point named "configuratorRunnable"</li>
      <li>Loads all the extensions for this extension point</li>
    </ol>
    ]]></description>

  <!-- Add application component. -->
  <application-components>
    <component>
      <implementation-class>Configurator</implementation-class>
    </component>
  </application-components>

  <!-- Extension point for the application component above. -->
  <extensionPoints>
    <extensionPoint name="configuratorRunnable"
        interface="java.lang.Runnable" />
  </extensionPoints>

  <!--
    Extensions that run when the application component above is initialized.
  -->
  <extensions
      defaultExtensionNs="com.developerlife.example.idea-plugin-example">
    <configuratorRunnable order="first" implementation="AnInitializer"
        id="MyPlugin.AnInitializer" />
    <configuratorRunnable order="last" implementation="AnotherInitializer"
        id="MyPlugin.AnotherInitializer" />
  </extensions>

  <actions>
    <!-- Add SearchOnStackOverflowAction Action to EditorPopupMenu -->
    <action id="MyPlugin.Editor.SearchOnStackOverflowAction"
        class="SearchOnStackOverflowAction" text="Search on Stack Overflow"
        description="Search selected text on Stack Overflow"
        icon="/icons/ic_stackoverflow.svg">
      <add-to-group group-id="EditorPopupMenu" anchor="last" />
      <add-to-group group-id="ConsoleEditorPopupMenu" anchor="last" />
    </action>

    <!-- Create a new Greeting menu -->
    <group id="MyPlugin.SampleMenu" text="Greeting" description="Greeting menu">
      <add-to-group group-id="MainMenu" anchor="last" />

      <!-- Add HelloAction action to the Greeting menu -->
      <action id="MyPlugin.HelloAction" class="HelloAction" text="Hello"
          description="Says hello" icon="/icons/ic_check_circle.svg">
        <add-to-group group-id="MainMenu" anchor="first" />
      </action>

      <!-- Add AskQuestionOnStackOverflowAction action to the Greeting menu -->
      <action id="MyPlugin.AskQuestionOnStackOverflowAction"
          class="AskQuestionOnStackOverflowAction" text="Ask Question"
          description="Opens a browser" icon="/icons/ic_stackoverflow.svg">
        <add-to-group group-id="MainMenu" anchor="last" />
      </action>
    </group>
  </actions>
</idea-plugin>